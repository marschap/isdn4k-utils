#
# pppstats makefile
# $Id: Makefile.in,v 1.2 1997/10/26 23:08:38 fritz Exp $
#
SBINDIR      = @CONFIG_SBINDIR@
MANDIR       = @CONFIG_MANDIR@
CC           = @CC@
INSTALL      = @INSTALL@
INSTALL_SBIN = $(INSTALL) -m 755 -o 0 -g 0
INSTALL_DATA = $(INSTALL) -m 644 -o 0 -g 0
INSTALL_DIR  = $(INSTALL) -m 755 -o 0 -g 0 -d

PPPSTATSRCS  = ipppstats.c
PPPSTATOBJS  = ipppstats.o

CFLAGS       = -m486 -fomit-frame-pointer -O2 -I@CONFIG_KERNELDIR@/include

all: ipppstats

uninstall:
	rm -f $(SBINDIR)/ipppstats $(MANDIR)/man8/ipppstats.8

install: ipppstats ipppstats.man
	$(INSTALL_DIR) $(SBINDIR)
	$(INSTALL_DIR) $(MANDIR)/man8
	$(INSTALL_SBIN) ipppstats $(SBINDIR)/ipppstats
	$(INSTALL_DATA) ipppstats.man $(MANDIR)/man8/ipppstats.8

ipppstats: Makefile $(PPPSTATSRCS)
	$(CC) $(CFLAGS) -o ipppstats ipppstats.c

clean:
	rm -f ipppstats *~ *.o #* core

config:
	@./configure

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck

distclean: clean
	rm -f Makefile config.status config.cache config.log ipppstats.man

depend:
	cpp -M $(CFLAGS) $(PPPSTATSRCS) >.depend
#	makedepend $(CFLAGS) $(PPPSTATSRCS)
