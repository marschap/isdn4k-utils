#! /bin/sh
#
# $Id: .makedoc,v 1.1 1998/06/12 14:56:29 michael Exp $
#
# Converts the vbox sgml documentation to text and html. Internal use
# only!

# Converts to html

CURRENTPATH="`pwd`"

cd /tmp

sgml2html --language=de --charset=latin --split=0 ${CURRENTPATH}/vbox-de.sgml

sed <vbox-de.html \
	-e "s;<BODY>;<BODY>;g" \
	>${CURRENTPATH}/html/vbox-de.html

cp ${CURRENTPATH}/html/vbox-de.html /var/www/

