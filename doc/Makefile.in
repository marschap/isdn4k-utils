SHELL			= /bin/sh
MANPAGES		= ttyI.4
INSTALL_MAN		= @INSTALL@ -o 0 -g 0 -m 0644
prefix			= @prefix@
mandir			= @mandir@

all: $(MANPAGES)

config:
	@./configure

install:
	@for i in $(MANPAGES) ; do \
		MANSECT=`echo $$i | cut -d. -f2` ;\
		MANDIR=$(mandir)/man$$MANSECT ;\
		mkdir -p $$MANDIR ;\
		$(INSTALL_MAN) $$i $$MANDIR/$$i ;\
	done

uninstall:
	@for i in $(MANPAGES) ; do ;\
		MANSECT=`echo $i | cut -d. -f2` ;\
		MANDIR=$(mandir)man$$MANSECT ;\
		rm -f $$MANDIR/$$i ;\
	done

clean:

distclean:
	rm -f config.status config.cache config.log Makefile
